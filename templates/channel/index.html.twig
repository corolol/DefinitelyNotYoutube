{% extends 'base.html.twig' %}

{% block title %}{{ user.username }} | NotYouTube{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/css/account.css">
    <link rel="stylesheet" href="/css/index.css">
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12 p-0 baner">
            <img src="/img/banner.png" alt="" class="w-100">
            <div class="controls position-absolute w-100 h-100 py-2 px-3 d-flex align-items-end justify-content-between">
                <div class="username">{{ user.username }}</div>
            </div>
        </div>
    </div>
    <div class="row gx-3 gy-4 px-0 py-4 p-sm-4 thumbnail-container">
        {% for video in videos %}
            <div class="col-md-6 col-lg-4 col-xxl-3 thumbnail">
                <div class="image">
                    <a href="/video?v={{ video.UUID }}"></a>
                    <img src="/img/thumbnails/{{ video.thumbnail }}" alt="" draggable="false">
                    {# <img src="/img/thumbnails/138728.jpg" alt=""> #}
                    <div class="time">{{ video.duration }}</div>
                </div>
                <div class="title">
                    <a href="/video?v={{ video.UUID }}" title="{{ video.title }}">
                        {# Lorem ipsum dolor sit amet consectetur adipisicing elit. Natus, consequuntur non. Natus, consequuntur non. Natus, consequuntur non. #}
                        {{video.title}}
                    </a>
                </div>
                <div class="details-container">
                    {{ video.views }} views ‚óè Uploaded: {{ video.getUploadDate()|date('d-m-Y') }}
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
